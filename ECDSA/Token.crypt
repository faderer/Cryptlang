pragma Cryptlang ^0.0.1;
import { ERC20 } from "./ERC20.sol";
contract ERC20Permit is ERC20 {
    function permit(address _owner, address _spender, uint256 _value) public {
        @ECDSA with SHA2(_owner, _spender, _value, 0xD7ACd2a9FD159E69Bb102A1ca21C9a3e3A5F771B); // explicitly indicate the owner of the signature, by default it is the sender
        _approve(_owner, _spender, _value);
    }
}